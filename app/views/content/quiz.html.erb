	var q5 = document.forms["quizForm"]["q5"].value;

	// Validation
	for(i = 1; i <= total;i++){
		if(eval('q'+i) == null || eval('q'+i) == ''){
			alert('You missed question '+ i);
			return false;
		}
	}

	// Set Correct Answers
	var answers = ["b","a","d","b","d"];

	// Check Answers
	for(i = 1; i <= total;i++){
		if(eval('q'+i) == answers[i - 1]){
			score++;
		}
